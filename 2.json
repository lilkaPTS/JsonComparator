{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product",
  "description": "A product from the catalog",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "description": {
          "type": "object",
          "properties": {
            "version": {
              "type": "integer"
            }
          },
          "required": [
            "version"
          ]
        },
        "application": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            }
          },
          "required": [
            "name"
          ]
        }
      },
      "required": [
        "description",
        "application"
      ]
    },
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "service_name": {
            "type": "string"
          },
          "artifact_type": {
            "type": "string"
          },
          "docker_registry": {
            "type": "string"
          },
          "docker_image_name": {
            "type": "string"
          },
          "docker_tag": {
            "type": "string"
          },
          "hashes": {
            "type": "object",
            "properties": {
              "sha1": {
                "type": "string"
              },
              "sha256": {
                "type": "string"
              }
            },
            "required": [
              "sha1",
              "sha256"
            ]
          }
        },
        "required": [
          "service_name",
          "artifact_type",
          "docker_registry",
          "docker_image_name",
          "docker_tag",
          "hashes"
        ]
      }
    },
    "artifacts": {
      "type": "array",
      "items": {"anyOf":[
        {
          "type": "object",
          "properties": {
            "mvn": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "properties": {
                  "groupId": {
                    "type": "string"
                  },
                  "artifactId": {
                    "type": "string"
                  },
                  "version": {
                    "type": "string"
                  },
                  "mvn_type": {
                    "type": "string"
                  },
                  "mvn_repository": {
                    "type": "string"
                  },
                  "hashes": {
                    "type": "object",
                    "properties": {
                      "sha1": {
                        "type": "string"
                      },
                      "sha256": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "sha1",
                      "sha256"
                    ]
                  }
                },
                "required": [
                  "groupId",
                  "artifactId",
                  "version",
                  "mvn_type",
                  "mvn_repository",
                  "hashes"
                ]
              }
            },
            "target_repository": {
              "type": "string"
            }
          },
          "required": [
            "mvn",
            "target_repository"
          ]
        },
        {
          "type": "object",
          "properties": {
            "hashes": {
              "type": "object",
              "properties": {
                "sha1": {
                  "type": "string"
                },
                "sha256": {
                  "type": "string"
                }
              },
              "required": [
                "sha1",
                "sha256"
              ]
            },
            "file": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            },
            "target_repository": {
              "type": "string"
            }
          },
          "required": [
            "hashes",
            "file",
            "target_repository"
          ]
        }
      ]}
    }
  },
  "required": ["metadata", "services", "artifacts"]
}
