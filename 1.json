{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "application": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            }
          }
        },
        "description": {
          "type": "object",
          "properties": {
            "version": {
              "type": "integer"
            }
          },
          "required": [
            "version"
          ]
        }
      },
      "required": [
        "application",
        "description"
      ]
    },
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "artifact_type": {
            "type": "string"
          },
          "docker_image_name": {
            "type": "string"
          },
          "docker_registry": {
            "type": "string"
          },
          "docker_tag": {
            "type": "string"
          },
          "force": {
            "type": "boolean"
          },
          "github_branch": {
            "type": "string"
          },
          "github_hash": {
            "type": "string"
          },
          "github_repository": {
            "type": "string"
          },
          "hashes": {
            "type": "object",
            "properties": {
              "sha1": {
                "type": "string"
              },
              "sha256": {
                "type": "string"
              }
            }
          },
          "service-short-name": {
            "type": "string"
          },
          "service_name": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": [
    "metadata",
    "services"
  ]
}
